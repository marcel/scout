<%= form_for @roster_spot, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :yahoo_team_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :yahoo_team_key, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :yahoo_player_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :yahoo_player_key, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :week, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :week, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :position, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :position, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :playing_status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :playing_status, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rosters_path, :class => 'btn' %>
  </div>
<% end %>
