<div class="page-header">
  <h1><%= link_to(t('.title', :default => "Expert ranking for #{@position_type.gsub('-', ' ').capitalize}"), url_for()) %> <small>week <%= @week %></small></h1>
</div>

<%= weeks_in_season(@week) %>
<%= position_type_selector(@position_type) %>
<% if !GameWeek.current?(@week) %>
  <%= link_to 'Show ranking based on points', current_url(rank_by: :points) %>
<% end %>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Player</th>
      <th>Projected</th>
      <th>Brandon<br />Funston</th>
      <th>Andy<br/>Behrens</th>
      <th>Brad<br/>Evans</th>
      <th>Scott<br/>Pianowski</th>
      <th>Dalton<br/>Del Don</th>
    </tr>
  </thead>
  <tbody class="row-fluid">
    <% @expert_ranks.each do |expert_rank| %>
      <tr>
        <td class="span1">
          <strong><%= expert_rank.overall_rank %></strong>
          <%= expert_ranking_trend(expert_rank) %>
          <!-- <% if expert_rank.overall_rank != @actual_ranks[expert_rank.player.id] %>
            <br /><span style="padding: 5px" class="label label-success icon-info-sign">&nbsp;<strong><%= @actual_ranks[expert_rank.player.id] %></strong></span>
          <% end %> -->
        </td>
        <td class="span3">
          <%= player_profile(expert_rank.player) %>
          <% expert_rank.player.expert_rank_on_week(@week - 1)%>
        </td>
        <td class="span1">
          <% if @week != GameWeek.current.week %>
            A: <%= player_points_status(expert_rank.player.points_on_week(@week).total) %><br />
          <% end %>
          <% projections = expert_rank.player.projection(@week) %>
          <% {H: :standard_high, S: :standard, L: :standard_low}.each do |label, projection| %>
            <%= "#{label}: " %> <%= player_points_status(projections.send(projection)) %><br />
          <% end %>
        <td class="span1"><%= expert_rank.expert_1_rank %></td>
        <td class="span1"><%= expert_rank.expert_2_rank %></td>
        <td class="span1"><%= expert_rank.expert_3_rank %></td>
        <td class="span1"><%= expert_rank.expert_4_rank %></td>
        <td class="span1"><%= expert_rank.expert_5_rank %></td>
      </tr>
    <% end %>
  </tbody>
</table>
