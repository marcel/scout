<%- model_class = Team -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:yahoo_key) %>:</strong></dt>
  <dd><%= @team.yahoo_key %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @team.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number_of_moves) %>:</strong></dt>
  <dd><%= @team.moves %></dd>
  <dt><strong><%= model_class.human_attribute_name(:number_of_trades) %>:</strong></dt>
  <dd><%= @team.trades %></dd>
</dl>
