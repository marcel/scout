<%= weeks_in_season(@week) %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Player</th>
      <th>Points</th>
    </tr>
  </thead>
  <tbody>
    <% @player_point_totals.each do |player_point_total| %>
      <tr>
        <td class="span4">
          <%= player_profile(player_point_total.player, player_points_path(player_point_total.player)) %>
        </td>
        <td class="span8"><%= points_status(player_point_total.total) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
